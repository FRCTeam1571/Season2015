#include "WPILib.h"
#include <Victor.h>
#include <RobotDrive.h>
#include <Joystick.h>

class Robot: public IterativeRobot
{
private:
	LiveWindow *lw;
	Victor* v1;
	Victor* v2;
	RobotDrive* drive;
	Joystick* stick;

	void RobotInit()
	{
		lw = LiveWindow::GetInstance();
		v1 = new Victor(0);
		v2 = new Victor(1);
		drive = new RobotDrive(v1, v2);
		stick = new Joystick(0);
	}

	void AutonomousInit()
	{

	}

	void AutonomousPeriodic()
	{
		drive->ArcadeDrive(stick);
	}

	void TeleopInit()
	{

	}

	void TeleopPeriodic()
	{

	}

	void TestPeriodic()
	{
		lw->Run();
	}
};

START_ROBOT_CLASS(Robot);
