#include "OI.h"

OI::OI():
setencodermotorposition(),
xbox(0)
{

}

#define Toggle(button, controller) button.toggle = \
	(!button.pressed && button.pressed = controller->GetButtonRaw(button.mapping))?\
			button.toggle = (button.toggle)?false:true:\
					button.toggle = button.toggle

void OI::poll()
{
	Toggle(RaiseLift);

}
