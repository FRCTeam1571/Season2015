#ifndef OI_H
#define OI_H

#include "WPILib.h"

#include <Joystick.h>

#include "RobotMap.h"
#include "Commands/SetEncoderMotorPositionCommand.h"

typedef struct
{
	int mapping;
	bool pressed = false;
	bool toggle = false;
} Button;

typedef struct
{
	int XMap, YMap;
	double XVal = 0, YVal = 0;
} Stick;

#define Toggle(button) button.toggle = \
	(!button.pressed && button.pressed = xbox->GetButtonRaw(button.mapping))?\
			button.toggle = (button.toggle)?false:true:\
					toggle = toggle




class OI
{
private:
	SetEncoderMotorPositionCommand* setencodermotorposition;

	Joystick* xbox; //Don't access directly

	Button RaiseLift = {RightBumper};
	Button LowerLift = {LeftBumper};

	Stick DriveRobot = {LeftStickX, LeftStickY};
public:
	OI();

	void poll();
};

#endif
