#include "WPILib.h"
#include "Commands/Command.h"
#include "Commands/UpdateEncoderMotorCommand.h"
#include "Subsystems/DriveTrainSubsystem.h"
#include "Subsystems/EncoderMotorSubsystem.h"
#include "CommandBase.h"

class Robot: public IterativeRobot
{
private:
	UpdateEncoderMotorCommand* updateencodermotor;
	LiveWindow* lw;

	OI* interface;

	void RobotInit()
	{
		CommandBase::init();
		CommandBase::encodermotorsubsystem = new EncoderMotorSubsystem();
		CommandBase::drivetrainsubsystem = new DriveTrainSubsystem();
		updateencodermotor = new UpdateEncoderMotorCommand();
		lw = LiveWindow::GetInstance();

		updateencodermotor->Start();
	}
	
	void DisabledPeriodic()
	{
		Scheduler::GetInstance()->Run();
	}

	void AutonomousInit()
	{

	}

	void AutonomousPeriodic()
	{
		Scheduler::GetInstance()->Run();
	}

	void TeleopInit()
	{

	}

	void TeleopPeriodic()
	{
		Scheduler::GetInstance()->Run();

		interface->poll();
	}

	void TestPeriodic()
	{
		lw->Run();
	}
};

START_ROBOT_CLASS(Robot);

